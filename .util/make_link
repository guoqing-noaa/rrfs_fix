#!/bin/sh
utildir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
basedir="$(dirname "$utildir")"
agentdir="$basedir/.agent"
source $utildir/rrfs_fix_locations.sh

filetype=$(file $agentdir)
if [[ ! "$filetype" == *"symbolic link"* ]]; then
  rm -rf $agentdir
fi
ln -snf $RRFS_FIX_LOCATION $agentdir
